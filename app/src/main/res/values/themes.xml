<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RankFood" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/cor_laranja</item>
        <item name="colorPrimaryVariant">@color/cor_laranja_3</item>
        <item name="colorOnPrimary">@color/textBranco01</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/textPreto03</item>
        <item name="colorSecondaryVariant">@color/textPreto02</item>
        <item name="colorOnSecondary">@color/textPreto01</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.RankFood.Fullscreen" parent="Theme.RankFood">
        <item name="android:actionBarStyle">@style/Widget.Theme.RankFood.ActionBar.Fullscreen</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.RankFood.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/textBranco01</item>
        <item name="fullscreenTextColor">@color/textBranco03</item>
    </style>
</resources>