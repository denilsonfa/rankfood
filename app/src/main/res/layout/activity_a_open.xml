<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.A_A_Open"
    android:background="@drawable/cor_gradient_branco"
    android:orientation="vertical"
    android:weightSum="100"
    android:theme="@android:style/Theme.NoTitleBar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="40"
            android:gravity="bottom"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:layout_marginBottom="0dp"
                android:contentDescription="@string/app_name"
                android:padding="10dp"
                app:srcCompat="@drawable/ic_logo_laranja"
                tools:ignore="ImageContrastCheck" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="50"
            android:gravity="top"
            android:orientation="vertical"
            android:paddingTop="40dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:layout_marginBottom="24dp"
                android:fontFamily="@font/ubuntu_bolder"
                android:text="@string/app_name"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/cor_laranja"
                android:textSize="32sp"
                tools:ignore="TextContrastCheck" />

            <Button
                android:id="@+id/id_btn_open_enter"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/stl_btn_color"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/ubuntu_regular"
                android:text="@string/enter"
                android:textAllCaps="false"
                android:textColor="@color/textBranco01"
                android:textSize="18sp"
                tools:ignore="TextContrastCheck" />

            <Button
                android:id="@+id/id_btn_open_guest"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:background="@drawable/stl_btn_color"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/ubuntu_regular"
                android:text="@string/guest"
                android:textAllCaps="false"
                android:textColor="@color/textBranco01"
                android:textSize="18sp"
                tools:ignore="TextContrastCheck" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="40dp"
                android:layout_marginBottom="24dp"
                android:orientation="horizontal"
                android:weightSum="100">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|center_vertical"
                    android:layout_weight="50"
                    android:fontFamily="@font/ubuntu_regular"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:text="@string/resgister_1"
                    android:textAlignment="center"
                    android:textColor="@color/cor_laranja"
                    android:textSize="18sp"
                    tools:ignore="TextContrastCheck" />

                <TextView
                    android:id="@+id/id_text_open_resgister"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|center_vertical"
                    android:layout_weight="50"
                    android:background="@drawable/stl_item_incolor"
                    android:fontFamily="@font/ubuntu_bolder"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:text="@string/resgister_2"
                    android:textAlignment="center"
                    android:textColor="@color/cor_laranja"
                    android:textSize="18sp"
                    tools:ignore="TextContrastCheck" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>