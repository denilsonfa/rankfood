<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".A_A_Open"
    android:background="@drawable/cor_gradient_laranja1"
    android:orientation="vertical"
    android:weightSum="100"
    android:theme="@android:style/Theme.NoTitleBar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="50"
        android:gravity="bottom"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/id_logo_a_open"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginBottom="0dp"
            android:contentDescription="@string/app_name"
            android:padding="10dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            app:srcCompat="@drawable/ic_logo_branco"
            tools:ignore="ImageContrastCheck" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="50"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/id_text_a_open"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:fontFamily="@font/ubuntu_bolder"
            android:text="@string/app_name"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/textBranco01"
            android:textSize="32sp"
            tools:ignore="TextContrastCheck"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"/>

        <Button
            android:id="@+id/id_btn_a_open"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:background="@drawable/stl_btn_branco01"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/ubuntu_regular"
            android:text="@string/enter"
            android:textAllCaps="false"
            android:textColor="@color/textPreto02"
            android:textSize="18sp"
            app:backgroundTint="@color/colorPrimary"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="55"
                android:fontFamily="@font/ubuntu_regular"
                android:text="@string/resgister_1"
                android:textAlignment="textEnd"
                android:textColor="@color/textBranco01"
                android:textSize="16sp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="5dp"
                tools:ignore="TextContrastCheck" />

            <TextView
                android:id="@+id/id_text_a_register_open"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="45"
                android:fontFamily="@font/ubuntu_bolder"
                android:text="@string/resgister_2"
                android:textAlignment="textStart"
                android:textColor="@color/textBranco01"
                android:textSize="16sp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="40dp"
                tools:ignore="TextContrastCheck" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>